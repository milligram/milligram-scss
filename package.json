{
	"name": "milligram-scss",
	"version": "1.3.0",
	"description": "A minimalist CSS framework on SCSS version.",
	"homepage": "https://milligram.github.io",
	"repository": "milligram/milligram-scss",
	"license": "MIT",
	"author": "CJ Patoilo <cjpatoilo@gmail.com>",
	"main": "dist/milligram.scss",
	"keywords": [
		"bootstrap",
		"css",
		"css3",
		"flexbox",
		"front-end",
		"framework",
		"html",
		"html5",
		"kickstarter",
		"less",
		"responsive",
		"mobile",
		"mobile-first",
		"postcss",
		"responsive",
		"sass",
		"scss",
		"stylus"
	],
	"dependencies": {
		"normalize.css": "~5.0.0"
	},
	"devDependencies": {
		"autoprefixer": "^6.5.3",
		"banner-cli": "^0.9.2",
		"copycopy": "0.0.2",
		"husky": "^0.11.9",
		"node-sass": "^3.13.0",
		"npm-run-all": "^2.3.0",
		"onchange": "^2.5.0",
		"postcss-cli": "^2.6.0",
		"rimraf": "^2.5.4",
		"sass-lint": "^1.10.2"
	},
	"engines": {
		"node": ">=4"
	},
	"scripts": {
		"start": "run-p build watch",
		"build": "run-s clean copy banner sass autoprefixer",
		"clean": "rimraf dist",
		"sass": "node-sass --output-style expanded src/milligram.scss test/milligram.css && node-sass --output-style compressed src/milligram.scss test/milligram.min.css",
		"autoprefixer": "postcss -u autoprefixer --no-map.inline --autoprefixer.browsers \"last 1 versions\" -r test/*.css",
		"copy": "copycopy src/**/* dist",
		"banner": "banner-cli dist/*.scss",
		"watch": "onchange src -- run-p build",
		"lint": "sass-lint -c .sasslintrc src/*.scss --verbose --no-exit",
		"test": "run-s build lint"
	}
}
